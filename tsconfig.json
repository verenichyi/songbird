{
  "compilerOptions": {
	"outDir": "./dist/",
	"noImplicitAny": true,
	"module": "esnext",
	"target": "es5",
	"jsx": "react",
	"allowJs": true,
	"moduleResolution": "node",
	"sourceMap": true,
	"allowSyntheticDefaultImports" : true,
	"esModuleInterop" : true,
	"plugins": [{ "name": "typescript-plugin-css-modules" }],
	"baseUrl": ".",
	"paths": {
	  "src": ["./src/*"],
	}
  },
}